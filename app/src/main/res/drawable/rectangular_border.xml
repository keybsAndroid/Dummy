<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:thickness="@dimen/rectangular_border_thickness" android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/rectangular_border_width" android:color="@color/borderColor"/>
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:thickness="@dimen/rectangular_border_thickness" android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/rectangular_border_width" android:color="@color/borderColor"/>
        </shape>
    </item>
    <item>
        <shape android:thickness="@dimen/rectangular_border_thickness" android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/rectangular_border_width" android:color="@color/borderColor"/>
        </shape>
    </item>
</selector>