<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:thickness="@dimen/rectangular_border_thickness">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/rectangular_border_radius" />
            <stroke android:width="4dp" android:color="@color/divider" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" android:thickness="@dimen/rectangular_border_thickness">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/rectangular_border_radius" />
            <stroke android:width="4dp" android:color="@color/divider" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:thickness="@dimen/rectangular_border_thickness">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/rectangular_border_radius" />
            <stroke android:width="4dp" android:color="@color/divider" />
        </shape>
    </item>
</selector>