<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!--<item name="android:fontFamily">@font/noto</item>-->
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="colorControlNormal">@color/borderColor</item>
        <item name="colorControlActivated">@color/borderColor</item>
        <item name="android:layout_height">@dimen/edit_text_min_height</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/borderColor</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance" parent="AppTheme" />

    <style name="Button" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/textColorTertiary</item>
    </style>

    <style name="TextAppearance.SubMenu">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:paddingStart">@dimen/activity_padding</item>
        <item name="android:paddingLeft">@dimen/activity_padding</item>
        <item name="android:paddingRight">@dimen/activity_padding</item>
        <item name="android:paddingEnd">@dimen/activity_padding</item>
    </style>

    <style name="Button.Logout">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:background">@drawable/ic_logout_bg</item>
        <item name="android:minHeight">@dimen/minButtonHeight</item>
        <item name="android:minWidth">@dimen/minButtonWidth</item>
        <item name="android:paddingStart">@dimen/activity_padding</item>
        <item name="android:paddingLeft">@dimen/activity_padding</item>
        <item name="android:paddingRight">@dimen/activity_padding</item>
        <item name="android:paddingEnd">@dimen/activity_padding</item>
    </style>

    <style name="Button.Language">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:background">@drawable/ic_language_bg</item>
        <item name="android:minHeight">@dimen/minButtonHeight</item>
        <item name="android:minWidth">@dimen/minButtonWidth</item>
        <item name="android:paddingStart">@dimen/activity_padding</item>
        <item name="android:paddingLeft">@dimen/activity_padding</item>
        <item name="android:paddingRight">@dimen/activity_padding</item>
        <item name="android:paddingEnd">@dimen/activity_padding</item>
    </style>

    <style name="Button.Select">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:background">@drawable/select_button_gradient</item>
        <item name="android:minHeight">@dimen/minButtonHeight</item>
        <item name="android:minWidth">@dimen/minButtonWidth</item>
        <item name="android:paddingStart">@dimen/activity_padding</item>
        <item name="android:paddingLeft">@dimen/activity_padding</item>
        <item name="android:paddingRight">@dimen/activity_padding</item>
        <item name="android:paddingEnd">@dimen/activity_padding</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="TextAppearance.Menu">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="DialogAnimationSlideUpDown">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="TextAppearance.TextView">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginLeft">@dimen/line_view_margin</item>
        <item name="android:layout_marginRight">@dimen/line_view_margin</item>
        <item name="android:layout_marginBottom">@dimen/line_view_margin</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearance.TextViewPatientLabel">
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.TextViewPatientValue">
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/view_margin_half</item>
        <item name="android:layout_marginEnd">@dimen/view_margin_half</item>
    </style>

    <style name="TextAppearance.TextView.Small">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">@dimen/line_view_margin</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="TextAppearance.TextView.Heading">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">@dimen/line_view_margin</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/activity_padding</item>
        <item name="android:paddingEnd">@dimen/activity_padding</item>
    </style>

    <style name="TextAppearance.EditText">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangular_border_corner</item>
        <item name="android:minHeight">@dimen/editTextHeight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">@dimen/line_view_margin</item>
        <item name="android:layout_marginRight">@dimen/line_view_margin</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/activity_padding</item>
        <item name="android:paddingEnd">@dimen/activity_padding</item>
    </style>

    <style name="Button.Login">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:background">@drawable/ic_login_button_svg</item>
        <item name="android:minHeight">@dimen/minButtonHeight</item>
        <item name="android:minWidth">@dimen/minButtonWidth</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/activity_padding</item>
        <item name="android:paddingLeft">@dimen/activity_padding</item>
        <item name="android:paddingRight">@dimen/activity_padding</item>
        <item name="android:paddingEnd">@dimen/activity_padding</item>
        <item name="android:layout_marginLeft">@dimen/line_view_margin</item>
        <item name="android:layout_marginRight">@dimen/line_view_margin</item>
    </style>

    <style name="TextAppearance.DashBoardPrimary">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:minHeight">@dimen/dashBoardButtonHeight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="TextAppearance.DashBoardSecondary">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:minHeight">@dimen/dashBoardButtonHeight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="LinearProgress" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:progressBackgroundTint">@color/colorPrimaryLight</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="Tab" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/tab_selected_style</item>
    </style>


    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

</resources>
