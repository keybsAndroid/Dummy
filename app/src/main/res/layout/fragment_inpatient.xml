<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.dashboard.inpatient.InpatientFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_background_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin_half"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_very_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/view_margin_small"
                    android:orientation="vertical">

                    <include layout="@layout/layout_border" />

                    <LinearLayout
                        android:id="@+id/name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/edit_text_min_height"
                            android:orientation="horizontal"
                            android:weightSum="1.1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/patient"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                        <include layout="@layout/layout_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bed_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/edit_text_min_height"
                            android:orientation="horizontal"
                            android:weightSum="1.1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/bed_number"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:id="@+id/bed_number"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                        <include layout="@layout/layout_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/age_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/edit_text_min_height"
                            android:orientation="horizontal"
                            android:weightSum="1.1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/age"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:id="@+id/age"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                        <include layout="@layout/layout_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gender_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/edit_text_min_height"
                            android:orientation="horizontal"
                            android:weightSum="1.1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/gender"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:id="@+id/gender"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                        <include layout="@layout/layout_border" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dept_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/edit_text_min_height"
                            android:orientation="horizontal"
                            android:weightSum="1.1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/department"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:id="@+id/department"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                        <include layout="@layout/layout_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/diagnosis_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/edit_text_min_height"
                            android:orientation="horizontal"
                            android:weightSum="1.1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/diagnosis"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:id="@+id/diagnosis"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                        <include layout="@layout/layout_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/edit_text_min_height"
                            android:orientation="horizontal"
                            android:weightSum="1.1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                        <include layout="@layout/layout_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/allergy_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/edit_text_min_height"
                            android:orientation="horizontal"
                            android:weightSum="1.1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/allergy"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:padding="@dimen/padding_medium"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:id="@+id/allergy"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="start|center"
                                android:padding="@dimen/padding_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                        <include layout="@layout/layout_border" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>