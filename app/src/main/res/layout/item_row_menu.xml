<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sub_menu_width"
    android:layout_height="@dimen/sub_menu_height"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="@dimen/menu_image_size"
        android:layout_height="@dimen/menu_image_size"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/text_view_margin"
        android:layout_marginTop="@dimen/text_view_margin"
        android:layout_marginEnd="@dimen/text_view_margin" />

    <TextView
        android:id="@+id/menu_name"
        style="@style/TextAppearance.Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/divider"
            layout="@layout/layout_view_white_bg"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>