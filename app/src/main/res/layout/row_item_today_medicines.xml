<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/view_margin_half"
    android:animateLayoutChanges="true"
    android:background="@drawable/today_medicine_grid_item_bg"
    android:elevation="@dimen/grid_elevation"
    android:foreground="?selectableItemBackground"
    android:minHeight="@dimen/grid_item_layout"
    android:orientation="vertical"
    app:elevation="@dimen/grid_elevation"
    tools:ignore="UnusedAttribute">

    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/grid_margin"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/today_tasks"
        android:textColor="@color/white"
        android:textDirection="locale"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/medicine_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicine_name"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/grid_margin"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/today_tasks"
        android:textColor="@color/light_white"
        android:textDirection="locale"
        android:textSize="@dimen/text_size_medium"
        android:visibility="gone" />


</RelativeLayout>