<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background_corner"
    android:orientation="vertical"
    tools:context=".views.fragments.task.meals.MealsDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin_large"
        android:layout_marginEnd="@dimen/activity_margin_large"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_large"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meal_image"
                android:layout_width="@dimen/nurse_image_size"
                android:layout_height="@dimen/nurse_image_size"
                android:layout_gravity="center"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin_large"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/view_margin_half">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/view_margin_half"
                    android:gravity="center"
                    android:text="@string/breakfast"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:textSize="@dimen/text_size_normal" />

                <include layout="@layout/layout_border" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/meals_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:text="@string/meal_name"
                        android:textColor="@color/colorPrimaryText"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/meal_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:textColor="@color/black"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/snacks_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:text="@string/snacks_name"
                        android:textColor="@color/colorPrimaryText"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/snacks_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:textColor="@color/black"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:text="@string/diet_name"
                        android:textColor="@color/colorPrimaryText"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/diet_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:textColor="@color/black"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:text="@string/meal_time"
                        android:textColor="@color/colorPrimaryText"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/meal_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:textColor="@color/black"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:text="@string/meal_details"
                        android:textColor="@color/colorPrimaryText"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/meal_details"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:textColor="@color/black"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:text="@string/doctor_comments"
                        android:textColor="@color/colorPrimaryText"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/doctor_comments"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:background="@drawable/cell_shape"
                        android:gravity="start"
                        android:padding="@dimen/view_margin_half"
                        android:textColor="@color/black"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:paddingTop="@dimen/view_margin_half"
            android:paddingBottom="@dimen/view_margin_half"
            android:text="@string/enjoy_your_meal"
            android:textColor="@color/colorPrimaryDark"
            android:textDirection="locale"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

</LinearLayout>