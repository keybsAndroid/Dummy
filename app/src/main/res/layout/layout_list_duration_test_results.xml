<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/activity_horizontal_inner_margin_medium"
                android:layout_marginEnd="@dimen/activity_horizontal_inner_margin_medium"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/select_a_period"
                android:textColor="@color/colorPrimaryText"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_horizontal_inner_margin_medium"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible"
                android:weightSum="1">

                <Button
                    android:id="@+id/three_month"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_month_height"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_weight="0.25"
                    android:background="@drawable/list_duration_button_bg"
                    android:gravity="center"
                    android:padding="@dimen/padding_medium"
                    android:text="@string/_3_months"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_small" />

                <Button
                    android:id="@+id/six_month"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_month_height"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_weight="0.25"
                    android:background="@drawable/list_duration_button_bg"
                    android:gravity="center"
                    android:padding="@dimen/padding_medium"
                    android:text="@string/_6_months"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_small" />

                <Button
                    android:id="@+id/nine_month"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_month_height"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_weight="0.25"
                    android:background="@drawable/list_duration_button_bg"
                    android:gravity="center"
                    android:padding="@dimen/padding_medium"
                    android:text="@string/_9_months"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_small" />

                <Button
                    android:id="@+id/one_year"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_month_height"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_weight="0.25"
                    android:background="@drawable/list_duration_button_bg"
                    android:gravity="center"
                    android:padding="@dimen/padding_medium"
                    android:text="@string/_1_year"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_small" />


            </LinearLayout>

            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="@dimen/activity_horizontal_inner_margin_medium"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/advice_hint"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_horizontal_inner_margin_medium"
            android:layout_marginTop="-9dp"
            android:layout_marginEnd="@dimen/activity_horizontal_inner_margin_medium"
            android:layout_weight="0.4"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/button_month_height"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_weight="0.425"
                android:background="@drawable/rectangle_border_select_period"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_toStartOf="@+id/from"
                    android:background="@android:color/transparent"
                    android:gravity="start|center"
                    android:hint="@string/from"
                    android:padding="@dimen/padding_medium"
                    android:textColorHint="@color/borderColor"
                    android:textDirection="locale"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start|center"
                    android:layout_margin="@dimen/view_margin_small"
                    android:gravity="center"
                    android:src="@drawable/ic_action_event" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/button_month_height"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_weight="0.425"
                android:background="@drawable/rectangle_border_select_period"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_toStartOf="@+id/to"
                    android:background="@android:color/transparent"
                    android:gravity="start|center"
                    android:hint="@string/to"
                    android:padding="@dimen/padding_medium"
                    android:textColorHint="@color/borderColor"
                    android:textDirection="locale"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start|center"
                    android:layout_margin="@dimen/view_margin_small"
                    android:gravity="center"
                    android:src="@drawable/ic_action_event" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/search_layout"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_month_height"
                android:layout_marginEnd="@dimen/view_margin_small"
                android:layout_weight="0.15"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/outline_search_white_24" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>